{
  "name": "endsound",
  "version": "3.0.0",
  "description": "Collaborative music creation platform",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server.js",
    "dev:client": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:typecheck": "npm run typecheck",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:typecheck"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "jsdom": "^24.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
